.html
  .left-header
    .textbox
      %p.user-name
        = current_user.name
      %ul.menu
        %li.new-group
          =link_to new_group_path do
            = icon('fas', 'pen-square',class: 'icon')
        %li.edit
          =link_to edit_user_path(current_user) do
            = icon('fas', 'cog', class: 'icon')
  .left-content
    - current_user.groups.each do |groups|
    .group
      = link_to '#' do
      %p.group_name 
        = group.name
      %p.message
        まだメッセージはありません
      
  